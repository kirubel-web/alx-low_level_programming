CC = gcc
CFLAGS = -Wall -Wextra -Werror -pedantic
SRC = main.c school.c
OBJ = $(SRC:%.c=%.o)
NAME = school
RM = rm -f

.PHONY: clean oclean fclean re

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

%.o: %.c m.h
	$(CC) $(CFLAGS) -c -o $@ $<

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: oclean all
